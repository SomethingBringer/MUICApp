<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/custom_snack_layout"
        android:layout_width="match_parent"
        app:strokeWidth="3dp"
        app:strokeColor="@color/divider"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/halfDimen"
        android:layout_marginEnd="@dimen/halfDimen"
        android:layout_marginBottom="@dimen/largestDimen"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivFace"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/halfDimen"
                android:layout_marginTop="@dimen/defDimen"
                android:layout_marginBottom="@dimen/defDimen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/success_green"
                tools:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/defDimen"
                android:layout_marginTop="@dimen/defDimen"
                app:layout_constraintStart_toEndOf="@id/ivFace"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Success" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/defDimen"
                android:layout_marginStart="@dimen/defDimen"
                android:layout_marginTop="@dimen/halfDimen"
                android:layout_marginEnd="@dimen/defDimen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivFace"
                app:layout_constraintTop_toBottomOf="@id/tvLabel"
                tools:text="@string/custom_snack_message" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</merge>
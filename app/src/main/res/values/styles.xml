<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="TextAppearance.HeadLine" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/amiri_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.Lead" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/amiri_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/amiri</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/amiri</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

</resources>